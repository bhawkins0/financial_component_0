<div>
  <div>
    <h1>
      List of all financial component transaction splits
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new financial component transaction split
    </h2>

    <form action="/insert_financial_component_transaction_split" method="post">
      <div>
        <label for="plaid_transaction_id_box">
          Plaid transaction
        </label>

        <input type="text" id="plaid_transaction_id_box" name="query_plaid_transaction_id">
      </div>

      <div>
        <label for="fc_account_number_box">
          Fc account number
        </label>

        <input type="text" id="fc_account_number_box" name="query_fc_account_number">
      </div>

      <div>
        <label for="fc_transaction_split_template_id_box">
          Fc transaction split template
        </label>

        <input type="text" id="fc_transaction_split_template_id_box" name="query_fc_transaction_split_template_id">
      </div>

      <div>
        <label for="fc_amount_box">
          Fc amount
        </label>

        <input type="text" id="fc_amount_box" name="query_fc_amount">
      </div>

      <div>
        <input type="checkbox" id="fc_transaction_split_type_box" name="query_fc_transaction_split_type" value="1">

        <label for="fc_transaction_split_type_box">Fc transaction split type</label>
      </div>

      <button>
        Create financial component transaction split
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Plaid transaction
        </th>

        <th>
          Fc account number
        </th>

        <th>
          Fc transaction split template
        </th>

        <th>
          Fc amount
        </th>

        <th>
          Fc transaction split type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_financial_component_transaction_splits.each do |a_financial_component_transaction_split| %>
      <tr>
        <td>
          <%= a_financial_component_transaction_split.id %>
        </td>

        <td>
          <%= a_financial_component_transaction_split.plaid_transaction_id %>
        </td>

        <td>
          <%= a_financial_component_transaction_split.fc_account_number %>
        </td>

        <td>
          <%= a_financial_component_transaction_split.fc_transaction_split_template_id %>
        </td>

        <td>
          <%= a_financial_component_transaction_split.fc_amount %>
        </td>

        <td>
          <%= a_financial_component_transaction_split.fc_transaction_split_type %>
        </td>

        <td>
          <%= time_ago_in_words(a_financial_component_transaction_split.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_financial_component_transaction_split.updated_at) %> ago
        </td>

        <td>
          <a href="/financial_component_transaction_splits/<%= a_financial_component_transaction_split.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
