<div>
  <div>
    <h1>
      List of all financial component keywords
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new financial component keyword
    </h2>

    <form action="/insert_financial_component_keyword" method="post">
      <div>
        <label for="plaid_name_box">
          Plaid name
        </label>

        <input type="text" id="plaid_name_box" name="query_plaid_name">
      </div>

      <div>
        <label for="plaid_merchant_name_box">
          Plaid merchant name
        </label>

        <input type="text" id="plaid_merchant_name_box" name="query_plaid_merchant_name">
      </div>

      <div>
        <label for="plaid_category_box">
          Plaid category
        </label>

        <input type="text" id="plaid_category_box" name="query_plaid_category">
      </div>

      <div>
        <label for="fc_split_id_box">
          Fc split
        </label>

        <input type="text" id="fc_split_id_box" name="query_fc_split_id">
      </div>

      <div>
        <label for="transaction_cont_box">
          Transaction cont
        </label>

        <input type="text" id="transaction_cont_box" name="query_transaction_cont">
      </div>

      <button>
        Create financial component keyword
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Plaid name
        </th>

        <th>
          Plaid merchant name
        </th>

        <th>
          Plaid category
        </th>

        <th>
          Fc split
        </th>

        <th>
          Transaction cont
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_financial_component_keywords.each do |a_financial_component_keyword| %>
      <tr>
        <td>
          <%= a_financial_component_keyword.id %>
        </td>

        <td>
          <%= a_financial_component_keyword.plaid_name %>
        </td>

        <td>
          <%= a_financial_component_keyword.plaid_merchant_name %>
        </td>

        <td>
          <%= a_financial_component_keyword.plaid_category %>
        </td>

        <td>
          <%= a_financial_component_keyword.fc_split_id %>
        </td>

        <td>
          <%= a_financial_component_keyword.transaction_cont %>
        </td>

        <td>
          <%= time_ago_in_words(a_financial_component_keyword.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_financial_component_keyword.updated_at) %> ago
        </td>

        <td>
          <a href="/financial_component_keywords/<%= a_financial_component_keyword.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
