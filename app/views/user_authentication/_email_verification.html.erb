<%if flags == 0%>
  <%if email_exists == nil %>       
    <div class="div_spacing text-danger" id="login_alert"><%=alert%></div>
  <%elsif email_exists == 0%>
    <div class="div_spacing text-danger" id="login_alert">There is no account associated with this email.</div>
  <%else%>
    <div class="div_spacing text-danger" id="login_alert"><%=alert%></div>
    <script>
      window.location = "/forgot_password"
    </script>
  <%end%>
<%elsif flags == 1%>
  <div class="div_spacing text-danger" id="login_alert"><%=alert%></div>
  <%if email_exists == 1 %>
    <script type="text/javascript" src="/javascript/email_verification_flags1ee1.js"></script>
  <%else%>
    <script type="text/javascript" src="/javascript/email_verification_flags1ee0.js"></script>
  <%end%>
<%end%>