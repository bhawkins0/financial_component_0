<div class="page_title_div">
<h2 class="pageTitle display-4">Change Password</h2>
</div>

<div class="container">
  <form id="Password" action="/verify_password" method="post">
    <div class="row mb-3">
      <label for="current_password_box" class="col-sm-2 col-form-label border-bottom p-3">Current Password</label>
      <div class="col-sm-4 border-bottom p-3">
        <div class="input-group input-group-sm">
          <input class="form-control-plaintext bg-light" id="current_password_box" name="query_password" placeholder="Current password..." type="password" aria-label="Password" aria-describedby="current_password_box_toggle">
          <span class="input-group-text" id="current_password_box_toggle" onclick="password_show_hide(this.id);">
            <i class="fas fa-eye" id="show_eye"></i>
            <i class="fas fa-eye-slash d-none" id="hide_eye"></i>
          </span>
        </div>
      </div>
      <div class="col-sm-6"></div>
    
      <label for="password_box" class="col-sm-2 col-form-label border-bottom p-3">New Password</label>
      <div class="col-sm-4 border-bottom p-3">
        <div class="input-group input-group-sm">
          <input class="form-control-plaintext bg-light" id="password_box" name="query_password" placeholder="Choose a password..." type="password" aria-label="Password" aria-describedby="password_box_toggle">
          <span class="input-group-text" id="password_box_toggle" onclick="password_show_hide(this.id);">
            <i class="fas fa-eye" id="show_eye_2"></i>
            <i class="fas fa-eye-slash d-none" id="hide_eye_2"></i>
          </span>
        </div>
      </div>
      <div class="col-sm-6"></div>

      <label for="password_confirmation_box" class="col-sm-2 col-form-label border-bottom p-3">New Password Confirmation</label>
      <div class="col-sm-4 border-bottom p-3">
        <div class="input-group input-group-sm">
          <input class="form-control-plaintext bg-light" id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm New Password" type="password" aria-label="password_confirmation" aria-describedby="password_confirmation_toggle" onblur="password_validation();" onfocus="$('#change_password_alert').text('');">
          <span class="input-group-text" id="password_confirmation_toggle" onclick="password_show_hide(this.id);">
            <i class="fas fa-eye" id="show_eye_3"></i>
            <i class="fas fa-eye-slash d-none" id="hide_eye_3"></i>
          </span>
        </div>
      </div>
      <div class="col-sm-6"></div>      
    </div>

    <div class="div_spacing text-success" id="change_password_notice"><%=notice%></div>
    <div class="div_spacing text-danger" id="change_password_alert"><%=alert%></div>

    <div class="form_prompts">
      <a id="forgot_password_link" href="/forgot_password">Forgot your password?</a>
      <!--&bull;
      <a href="#">Resend email confirmation</a>-->
    </div>

    <div class="col-sm-12 p-3">
      <button type="submit" class="btn btn-primary btn-sm">Submit</button>
    </div>
  </form>
</div>

<script type="text/javascript" src="/javascript/change_password.js"></script>