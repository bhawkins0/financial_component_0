<%if @save_status == true%>
    $('#fcModal_1_Body').text("Please verify your email address to gain full access to Financial Component.");
<%else%>
    <%if @email_exists == true%>
        $('#fcModal_1_Body').text("There is already an accout associated with this email. Please login with this email or create an account with another email.");    
    <%else%>
        $('#fcModal_1_Body').text("User account failed to save. Please try again.");
    <%end%>
<%end%>
$('#fcModal_1').modal("show");
$("#fcModal_1").on('hide.bs.modal', function(){
  window.location = "/settings/profile";
});