<div class="page_title_div">
<h2 class="pageTitle display-4">Forgot Password</h2>
</div>

<div class="container">
  <form id="forgotPassword" action="/verify_email" method="post">
      <label for="code_box" class="col-sm-6 col-form-label p-3">Please insert the email associated with your account below</label>
      <div class="col-sm-6 border-bottom p-3">
        <input type="text" class="form-control-plaintext bg-light" id="code_box" name="email" placeholder="Email" style="padding:0px 8px;">
      </div>
      <div class="col-sm-6"></div>

    <div class="col-sm-12 p-3">
      <button type="submit" class="btn btn-primary btn-sm">Submit</button>
    </div>
  </form>
</div>


<script type="text/javascript" src="/javascript/forgot_password.js"></script>