<%if verification_stage == nil %>     
  <p>A verification code was sent to the e-mail associated with this account. Please enter the code below to reset your password.</p>
  <p>To send a new code, please click <a href="/forgot_password">click here.</a></p>

  <form id="validate_password_reset" onsubmit="process(document.getElementById('codeInput').value)">
  <!--<form action="/validate_password_reset" method="post">-->
    <div class="mb-3">
      <label for="codeInput" class="form-label">Verification Code</label>
      <input name="daCode" type="text" class="form-control" id="codeInput" aria-describedby="codeHelp" placeholder="Insert Code" required>    
      <div id="codeHelp" class="form-text">The verification code was sent to the email address provided.</div>
    </div>
    <button type="submit" class="btn btn-primary">Verify Code</button>
  </form>
<%else%>
  <%if password_reset_status == nil %>
    <p>The code entered does not match the code provided. Please request another verification code <a href="/forgot_password">here</a>.</p>
  <%else%>
    <div class="container">
      <form action="/update_password" method="post">
        <div class="row mb-3">
         
          <label for="password_box" class="col-sm-2 col-form-label border-bottom p-3">Password</label>
          <div class="col-sm-4 border-bottom p-3">
            <div class="input-group input-group-sm">
              <input class="form-control-plaintext bg-light" id="password_box" name="query_password" placeholder="Choose a password..." type="password" aria-label="Password" aria-describedby="basic-addon2">
              <span class="input-group-text" id="basic-addon2" onclick="password_show_hide(this.id);">
                <i class="fas fa-eye" id="show_eye"></i>
                <i class="fas fa-eye-slash d-none" id="hide_eye"></i>
              </span>
            </div>
          </div>
          <div class="col-sm-6"></div>

          <label for="password_confirmation_box" class="col-sm-2 col-form-label border-bottom p-3">Password Confirmation</label>
          <div class="col-sm-4 border-bottom p-3">
            <div class="input-group input-group-sm">
              <input class="form-control-plaintext bg-light" id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm Password" type="password" aria-label="password_confirmation" aria-describedby="basic-addon3">
              <span class="input-group-text" id="basic-addon3" onclick="password_show_hide(this.id);">
                <i class="fas fa-eye" id="show_eye_2"></i>
                <i class="fas fa-eye-slash d-none" id="hide_eye_2"></i>
              </span>
            </div>
          </div>
          <div class="col-sm-6"></div>

        <div class="col-sm-12 p-3">
          <button type="submit" class="btn btn-primary btn-sm">Update Password</button>
        </div>
      </form>
    </div>
  <%end%>
<%end%>